{
	"name": "@myorm/myorm",
	"version": "0.3.13",
	"homepage": "https://github.com/myorm/myorm",
	"repository": {
		"type": "git",
		"url": "https://github.com/myorm/myorm"
	},
	"description": "Provides an easy way to interact with ad atabase by creating Contexts connected to a table in your database with only the need of defining your tables as TypeScript types.",
	"main": "./dist/cjs/contexts.js",
	"module": "./dist/esm/contexts.js",
	"types": "./dist/esm/types/contexts.d.ts",
	"scripts": {
		"document": "jsdoc ./lib/src/ -t ./node_modules/docdash -c ./jsdoc-conf.json",
		"clean": "del /S /Q .\\dist",
		"build": "npm run test > output.txt && npm run clean && npm run build:esm && npm run build:cjs && npm run rollup",
		"build:esm": "tsc -p ./configs/tsconfig.esm.json",
		"build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
		"rollup": "rollup -c",
		"test": "node ./lib/tests/test.js",
		"ctest": "node ./lib/tests/test.js -c",
		"prepack": "npm run build"
	},
	"keywords": [
		"mysql",
		"context",
		"typescript",
		"table",
		"query",
		"queries",
		"insert",
		"update",
		"database",
		"insert",
		"update",
		"delete",
		"truncate",
		"left join",
		"include",
		"relationships",
		"hasOne",
		"hasMany"
	],
	"author": "Travis Zuleger",
	"license": "(MIT OR Apache-2.0)",
	"type": "module",
	"devDependencies": {
		"@myorm/mysql-adapter": "^0.0.1",
		"@types/node": "^18.11.18",
		"docdash": "^2.0.1",
		"dotenv": "^16.0.3",
		"rollup-plugin-dts": "^5.3.0",
		"typescript": "^4.9.4"
	},
	"files": [
		"dist/**/*"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/types/contexts.d.ts",
				"default": "./dist/esm/contexts.js"
			},
			"require": {
				"types": "./dist/cjs/types/contexts.d.ts",
				"default": "./dist/cjs/contexts.js"
			}
		}
	}
}
